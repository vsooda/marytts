<allophones name="sampazh" xml:lang="zh"
		features="vlng vheight vfront vrnd ctype cplace cvox">
	<silence ph="_"/>

   <!--40个韵母！！！--> 
	<vowel ph="a" vlng="s" vheight="1" vfront="1" vrnd="+"/>
	<vowel ph="o" vlng="s" vheight="1" vfront="2" vrnd="-"/>	
	<vowel ph="e" vlng="s" vheight="1" vfront="1" vrnd="-"/>
	<vowel ph="i" vlng="s" vheight="1" vfront="2" vrnd="+"/>
	<vowel ph="u" vlng="s" vheight="1" vfront="1" vrnd="-"/>
	<vowel ph="v" vlng="s" vheight="1" vfront="1" vrnd="-"/>
	
        <vowel ph="er" vlng="a" vheight="1" vfront="2" vrnd="+"/>

	<vowel ph="ai" vlng="d" vheight="1" vfront="1" vrnd="-"/>
	<vowel ph="ei" vlng="d" vheight="1" vfront="1" vrnd="-"/>
	<vowel ph="ao" vlng="d" vheight="1" vfront="1" vrnd="+"/>
	<vowel ph="ou" vlng="d" vheight="2" vfront="1" vrnd="-"/>

	<vowel ph="ia"  vlng="d" vheight="2" vfront="2" vrnd="-"/>
	<vowel ph="iao" vlng="l" vheight="1" vfront="2" vrnd="-"/>
	<vowel ph="iou" vlng="l" vheight="2" vfront="3" vrnd="-"/>

	<vowel ph="ua"  vlng="d" vheight="1" vfront="3" vrnd="+"/>
	<vowel ph="uo"  vlng="d" vheight="2" vfront="3" vrnd="-"/>
	<vowel ph="uai" vlng="l" vheight="2" vfront="2" vrnd="-"/>
	<vowel ph="uei" vlng="l" vheight="3" vfront="2" vrnd="+"/>
       
        <vowel ph="ui" vlng="d" vheight="2" vfront="2" vrnd="+"/>
        <vowel ph="iu" vlng="d" vheight="3" vfront="2" vrnd="+"/>
        <vowel ph="ie" vlng="d" vheight="3" vfront="2" vrnd="+"/>
        <vowel ph="vi" vlng="d" vheight="3" vfront="2" vrnd="+"/>

	<vowel ph="an"  vlng="l" vheight="3" vfront="2" vrnd="-"/>
	<vowel ph="en"  vlng="a" vheight="2" vfront="1" vrnd="-"/>
	<vowel ph="ang" vlng="l" vheight="1" vfront="1" vrnd="+"/>
	<vowel ph="eng" vlng="a" vheight="3" vfront="1" vrnd="-"/>

	<vowel ph="ian"  vlng="l" vheight="2" vfront="3" vrnd="+"/>
	<vowel ph="in"   vlng="a" vheight="2" vfront="3" vrnd="+"/>
	<vowel ph="iang" vlng="l" vheight="1" vfront="3" vrnd="+"/>
	<vowel ph="ing"  vlng="a" vheight="2" vfront="2" vrnd="-"/>

	<vowel ph="uan"  vlng="l" vheight="2" vfront="2" vrnd="+"/>
	<vowel ph="uen"  vlng="l" vheight="3" vfront="2" vrnd="-"/>
	<vowel ph="uang" vlng="l" vheight="2" vfront="2" vrnd="+"/>
	<vowel ph="ong"  vlng="l" vheight="2" vfront="2" vrnd="+"/>

	
        <vowel ph="un"   vlng="a" vheight="2" vfront="1" vrnd="+"/>
        <vowel ph="ue"   vlng="d" vheight="2" vfront="1" vrnd="+"/>
	<vowel ph="vn"   vlng="a" vheight="2" vfront="1" vrnd="+"/>
	<vowel ph="iong" vlng="l" vheight="1" vfront="1" vrnd="+"/>

         <!--23个声母！！！--> 

	<consonant ph="B"  ctype="s" cplace="l" cvox="-"/>
	<consonant ph="C"  ctype="a" cplace="d" cvox="-"/>
	<consonant ph="Ch" ctype="a" cplace="g" cvox="-"/>
	<consonant ph="D"  ctype="s" cplace="a" cvox="-"/>
	<consonant ph="F"  ctype="f" cplace="b" cvox="-"/>
	<consonant ph="G"  ctype="s" cplace="v" cvox="-"/>	

	<consonant ph="H" ctype="f" cplace="v" cvox="-"/>
        <consonant ph="J" ctype="a" cplace="p" cvox="-"/>
	<consonant ph="K" ctype="s" cplace="v" cvox="-"/>
	<consonant ph="L" ctype="r" cplace="d" cvox="+"/>
	<consonant ph="M" ctype="n" cplace="l" cvox="+"/>
	<consonant ph="N" ctype="n" cplace="d" cvox="+"/>

	<consonant ph="P"  ctype="s" cplace="l" cvox="-"/>
        <consonant ph="Q"  ctype="a" cplace="p" cvox="-"/>
	<consonant ph="R"  ctype="f" cplace="g" cvox="+"/>
	<consonant ph="S"  ctype="f" cplace="d" cvox="-"/>
	<consonant ph="Sh" ctype="f" cplace="g" cvox="-"/>
	<consonant ph="T"  ctype="s" cplace="a" cvox="-"/>

        <consonant ph="W"  ctype="f" cplace="a" cvox="-"/>
        <consonant ph="X"  ctype="f" cplace="p" cvox="-"/>
        <consonant ph="Y"  ctype="a" cplace="d" cvox="-"/>
	<consonant ph="Z"  ctype="a" cplace="d" cvox="-"/>
	<consonant ph="Zh" ctype="a" cplace="g" cvox="-"/>

	
</allophones>
